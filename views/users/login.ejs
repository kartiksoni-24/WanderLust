<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WanderLust</title>


    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Tilt+Neon&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<%- include("../includes/flash.ejs") %>

    <body>
        <div class="container">

            <div class="form-box">
                <a href="/listings" class="static" style="text-decoration: none;">Go Back</a>
                <h1 class="left">Sign Up</h1><br>
                <div class="underline"></div>

                <div class="form-one">

                    <form action="/signup" method="post" class="form-one">

                        <div class="input-group">

                            <div class="input-field">
                                <!-- <i class="fa-regular fa-user"></i> -->
                                <input name="username" placeholder="Username" type="text" required>
                            </div>

                            <div class="input-field">
                                <!-- <i class="fa-solid fa-key"></i> -->
                                <input placeholder="Password" name="password" type="password" required>
                            </div>

                            <div class="input-field">
                                <!-- <i class="fa-solid fa-at"></i> -->
                                <input placeholder="Email" type="email" name="email" required>
                            </div>


                            <div id="btn">
                                <button class="right"> SignUp </button>

                                <br><br>

                                <div class="hr">
                                    <hr>
                                    <h4 style="text-align: center; position:sticky;">&nbsp; <em> Or </em> &nbsp;
                                    </h4>
                                    <hr>
                                </div>

                                <a href="/auth/google" class="gobtn">
                                    <img src="https://cdn1.iconfinder.com/data/icons/google-s-logo/150/Google_Icons-09-512.png"
                                        alt="#" width="50px">
                                    <b>Continue with Google</b> </a>

                            </div>
                            <p style=" color: white; text-shadow: 2px 2px 5px black;">Alredy
                                have an account? <a style="text-shadow: 2px 2px 5px black; color: white;" href="#"
                                    class="login"> &nbsp;
                                    Login</a></p>
                        </div>

                    </form>

                </div>


                <div class="form-two hide">

                    <form action="/login" method="post" class="form-two">

                        <div class="input-group">

                            <div class="input-field">
                                <!-- <i class="fa-solid fa-user"></i> -->
                                <input name="username" placeholder="Username" required type="text">
                            </div>

                            <div class="input-field">
                                <!-- <i class="fa-solid fa-key"></i> -->
                                <input placeholder="Password" required type="password" name="password">
                            </div>

                            <div id="btn">
                                <button class="right">Log in</button>
                                <br><br>
                                <div class="hr">
                                    <hr>
                                    <h4 style="text-align: center; position:sticky;">&nbsp; <em> Or </em> &nbsp;</h4>
                                    <hr>
                                </div>
                                <a href="/auth/google" style="margin-top:.75rem ;" class="gobtn">
                                    <img src="https://cdn1.iconfinder.com/data/icons/google-s-logo/150/Google_Icons-09-512.png"
                                        alt="#" width="50px">
                                    <b>Continue with Google</b> </a>

                                <p style="margin-top: 1.5rem; color: white; text-shadow: 2px 2px 5px black;">Don't have
                                    an
                                    account? <a href="#" class="signup"
                                        style="text-shadow: 2px 2px 5px black; color: white;">
                                        &nbsp;
                                        SignUp</a></p>
                            </div>


                        </div>

                    </form>

                </div>


            </div>
        </div>

        <script>
            let login = document.querySelector(".login"); // link of login page line no. 43
            let hide = document.querySelector(".form-one"); //line no.22 sing in form
            let unhide = document.querySelector(".form-two");//line no. 56 login page
            let h1 = document.querySelector("h1"); //line no. 19
            let form_box = document.querySelector(".form-box");// line no.17 contaion form one and two
            let i = document.querySelector(".signup");//line no. 18 arrow for go back on sign up page

            login.addEventListener("click", () => {
                form_box.classList.add("animate");

                setTimeout(() => {
                    h1.innerText = "Log in";
                    unhide.classList.remove("hide");
                    hide.classList.add("hide");
                    i.classList.remove("hide");

                    setTimeout(() => {
                        form_box.classList.remove("animate");
                    }, 500);

                }, 500);
            });

            i.addEventListener("click", () => {
                form_box.classList.add("animate");

                setTimeout(() => {
                    h1.innerText = "Sign Up";
                    unhide.classList.add("hide");
                    hide.classList.remove("hide");
                    i.classList.add("hide");

                    setTimeout(() => {
                        form_box.classList.remove("animate");
                    }, 500);

                }, 500);
            });
        </script>
    </body>

</html>